{
  "type": "message",
  "speak": "Hi! I'm Vso work bot! I'll help you manage your work items!",
  "attachments": [
    {
      "contentType": "application/vnd.microsoft.card.adaptive",
      "content": {
        "type": "AdaptiveCard",
        "version": "1.0",
        "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
        "body": [
          {
            "type": "ColumnSet",
            "columns": [
              {
                "type": "Column",
                "items": [
                  {
                    "type": "Image",
                    "style": "Person",
                    "url": "https://visualstudio.microsoft.com/wp-content/uploads/2019/04/BrandVisualStudioWin2019.png",
                    "size": "Small"
                  }
                ],
                "width": "auto"
              },
              {
                "type": "Column",
                "items": [
                  {
                    "type": "TextBlock",
                    "weight": "Bolder",
                    "text": "Welcome to VSOWorkBot",
                    "wrap": true,
                    "size": "Large"
                  }
                ],
                "width": "stretch",
                "verticalContentAlignment": "Center"
              }
            ]
          },
          {
            "type": "ColumnSet",
            "columns": [
              {
                "type": "Column",
                "width": "stretch",
                "items": [
                  {
                    "type": "TextBlock",
                    "text": "Start with something like:",
                    "size": "Medium"
                  },
                  {
                    "type": "TextBlock",
                    "text": "- Get all active bugs assigned to me.",
                    "horizontalAlignment": "Left"
                  },
                  {
                    "type": "TextBlock",
                    "text": "- Create a bug.",
                    "horizontalAlignment": "Left"
                  },
                  {
                    "type": "TextBlock",
                    "text": "- Update bug status to active"
                  }
                ],
                "spacing": "Large"
              }
            ]
          }
        ]
      }
    }
  ]
}