{
  "type": "message",
  "attachments": [
    {
      "contentType": "application/vnd.microsoft.card.adaptive",
      "content": {
        "type": "AdaptiveCard",
        "version": "1.0",
        "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
        "body": [
          {
            "type": "ColumnSet",
            "columns": [
              {
                "type": "Column",
                "width": 3,
                "spacing": "None",
                "items": [
                  {
                    "type": "ColumnSet",
                    "columns": [
                      {
                        "type": "Column",
                        "width": 3,
                        "spacing": "Medium",
                        "items": [
                          {
                            "type": "TextBlock",
                            "text": "{{bugId}}: {{bugTitle}}",
                            "weight": "Bolder",
                            "size": "Medium",
                            "height": "stretch",
                            "maxLines": 3,
                            "wrap": true
                          },
                          {
                            "type": "TextBlock",
                            "text": "{{bugStatus}}",
                            "spacing": "Small"
                          }
                        ]
                      }
                    ]
                  },
                  {
                    "type": "TextBlock",
                    "text": "Last updated in {{lastUpdated}}",
                    "spacing": "Small"
                  }
                ]
              }
            ]
          },
          {
            "type": "ActionSet",
            "actions": [
              {
                "type": "Action.OpenUrl",
                "title": "Open bug",
                "url": "{{bugUrl}}",
                "style": "positive"
              }
            ]
          }
        ]
      }
    }
  ]
}